@model IEnumerable<Project_RapPhim.ViewModels.YeuCauHoTroViewModel>
@{
    Layout = "_Layout";
}
<h2>Yêu Cầu Hỗ Trợ</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên khách hàng</th>
            <th>Tiêu Đề</th>
            <th>Nội Dung</th>
            <th>Ngày Gửi</th>
            <th>Trạng Thái</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.YeuCauId</td>
                    <td>@item.TenKhachHang</td>
                    <td>@item.TieuDe</td>
                    <td>@item.NoiDung</td>
                    <td>@item.NgayGui.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="badge @(item.TrangThai == "Đã xử lý" ? "bg-success" : "bg-danger")">
                            @item.TrangThai
                        </span>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">Không có yêu cầu hỗ trợ nào.</td>
            </tr>
        }
    </tbody>
</table>
