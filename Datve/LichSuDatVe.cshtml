@{
    ViewData["Title"] = "Lịch sử đặt vé";
}

<h2>Lịch sử đặt vé</h2>

@if (ViewBag.VeList != null && ViewBag.VeList.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Thời gian mua</th>
                <th>Phim</th>
                <th>Ghế</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ve in ViewBag.VeList)
            {
                <tr>
                    <td>@ve.NgayMua.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    <td>@ve.SuatChieu.Phim.TenPhim</td>
                    <td>@ve.GheNgoi.HangGhe@ve.GheNgoi.SoGhe</td>
                    <td>@ve.TrangThai</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có lịch sử đặt vé.</p>
}
